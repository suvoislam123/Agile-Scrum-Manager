<script>
    function updateProfie(field,value)
    {
        fetch(`/Account/Update/${field}/${value}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ field, value })
        })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                    console.log('Update successful');
                } else {
                    // Update failed
                    console.error('Update failed');
                }
            })
            .catch(error => {
                // Error occurred during the request
                console.error('Error:', error);
            });
    }
    const inputs = document.querySelectorAll(".profile-value-input input");
    inputs.forEach(input=>{
        const fieldControl = input.parentNode.nextSibling.nextSibling;
        const input_save_btns = document.querySelectorAll('.input-save-btn');
        input.addEventListener('focus',()=>{
            const classValue = fieldControl.getAttribute("class");
            const newValue = classValue.replace("d-none","d-block");
            fieldControl.setAttribute("class", newValue);
         
        });
        input.addEventListener("keyup", function (event) {
            if (event.key === "Enter" || event.keyCode === 13) {
                const field = input.getAttribute('field');
                const value = input.value;
                updateProfie(field,value);
                console.log("Enter key was pressed");
            }
        });
        input.addEventListener('blur',()=>{
            const classValue = fieldControl.getAttribute("class");
            const newValue = classValue.replace("d-block","d-none");
            fieldControl.setAttribute("class", newValue);
        });
    });
    
