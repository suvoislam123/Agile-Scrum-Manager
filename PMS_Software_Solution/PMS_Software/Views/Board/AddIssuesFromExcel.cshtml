@using Entities.ProjectEntities;
@using ServiceContracts.DTO.BoardDTO;
@model AddIssuesByExeleRequest;
@{
    IEnumerable<Board> boards = ViewData["boards"] as IEnumerable<Board>;
    var boardId = (Guid)ViewData["boardId"];
    var board = boards.FirstOrDefault(b => b.Id == boardId);
    var sprints = (ICollection<Sprint>)ViewData["sprints"];
    ViewData["projectId"] = board.ProjectId;
}
<div class="mt-3">
    <h3>Upload Issues from Xl File</h3>
    <form asp-controller="Board" asp-action="UploadIssuesFromExcel" method="post" enctype="multipart/form-data">
        <input asp-for="BoardId" type="hidden" value="@boardId" />
        <select asp-for="SelectedSprintId">
            <option value="Backlog" selected>Backlog</option>
            @foreach (var sprint in sprints)
            {
                <option value="@sprint.Id">@sprint.Name</option>
            }
        </select>
        <input asp-for="ExcelFile" type="file" name="excelFile" />
        <button class="btn" style="background-color:aquamarine" type="submit">Upload</button>
    </form>
</div>
